{
  "name": "store-invoice-generator",
  "version": "1.0.0",
  "description": "Professional Invoice Generator for Stores",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg . --compress Brotli",
    "build-win": "pkg . --targets node18-win-x64 --output dist/InvoiceGenerator-Windows.exe --compress Brotli",
    "build-mac": "pkg . --targets node18-macos-x64 --output dist/InvoiceGenerator-Mac --compress Brotli",
    "build-all": "npm run build-win && npm run build-mac"
  },
  "dependencies": {
    "express": "^4.18.2",
    "googleapis": "^157.0.0",
    "nodemailer": "^6.9.0",
    "pdfkit": "^0.13.0",
    "twilio": "^5.8.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "public/**/*",
      "fonts/**/*",
      "logo.png",
      "node_modules/pdfkit/js/data/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "invoice",
    "pdf",
    "generator",
    "store",
    "business"
  ],
  "author": "Your Name",
  "license": "MIT"
}
